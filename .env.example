GITHUB_TOKEN=ghp_xxx
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/github

# Docker Compose database settings (docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=github
POSTGRES_PORT=5432
ADMINER_PORT=8080

# Optional tuning
TARGET_REPO_COUNT=100000
PAGE_SIZE=100
MIN_STARS=0
MAX_PARTITION_RESULTS=1000
MAX_RETRIES=8
BASE_BACKOFF_SECONDS=1.0
REQUEST_TIMEOUT_SECONDS=40
MIN_REMAINING_POINTS=30
MIN_REQUEST_INTERVAL_SECONDS=0.20
LOOP_INTERVAL_HOURS=24
LOG_EVERY_N_PARTITIONS=20
SEARCH_BASE_QUALIFIERS=is:public fork:false archived:false
